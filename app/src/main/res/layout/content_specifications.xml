<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.google.carss.MainActivity">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/nameDet"
            android:layout_marginTop="60dp"
            android:textSize="18sp" />

        <TextView
            android:text="Manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/manuTextView"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/manuTextView"
            android:layout_alignLeft="@+id/nameDet"
            android:layout_alignStart="@+id/nameDet"
            android:id="@+id/manuDet"
            android:textSize="18sp" />

        <TextView
            android:text="Body Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manuTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/bstyleTextView"
            android:textSize="18sp" />

        <TextView
            android:text="Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bstyleTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/layoutTextView"
            android:textSize="18sp" />

        <TextView
            android:text="Engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/engineTextView"
            android:textSize="18sp" />

        <TextView
            android:text="Displacement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/engineTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/dispTextView"
            android:textSize="18sp" />

        <TextView
            android:text="Max Power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dispTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/powerTextView"
            android:textSize="18sp" />

        <TextView
            android:text="Max Torque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/powerTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/torqTextView"
            android:textSize="18sp" />

        <TextView
            android:text="COâ‚‚ Emission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/torqTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/CO2TextView"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bstyleTextView"
            android:layout_alignLeft="@+id/manuDet"
            android:layout_alignStart="@+id/manuDet"
            android:id="@+id/bstyleDet"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/engineTextView"
            android:layout_alignLeft="@+id/bstyleDet"
            android:layout_alignStart="@+id/bstyleDet"
            android:id="@+id/layoutDet"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dispTextView"
            android:layout_alignLeft="@+id/layoutDet"
            android:layout_alignStart="@+id/layoutDet"
            android:id="@+id/engineDet"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/torqTextView"
            android:layout_alignLeft="@+id/dispDet"
            android:layout_alignStart="@+id/dispDet"
            android:id="@+id/powerDet"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/CO2TextView"
            android:layout_alignLeft="@+id/powerDet"
            android:layout_alignStart="@+id/powerDet"
            android:id="@+id/torqDet"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/CO2TextView"
            android:layout_alignLeft="@+id/torqDet"
            android:layout_alignStart="@+id/torqDet"
            android:id="@+id/CO2Det"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dispDet"
            android:layout_alignBaseline="@+id/dispTextView"
            android:layout_alignBottom="@+id/dispTextView"
            android:layout_alignLeft="@+id/engineDet"
            android:layout_alignStart="@+id/engineDet"
            android:textSize="18sp" />

    </RelativeLayout>

</ScrollView>
